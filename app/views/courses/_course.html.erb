<div id="<%= dom_id course %>", class="course-card bg-white rounded-lg shadow-md overflow-hidden">
  <%= image_tag(course.image_url, class:"object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg") %>
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= course.name %></h3>
    <p class="text-gray-600 mb-2"><%= course.description %></p>
    <ul class="list-disc pl-4 mb-4">
      <li><strong>Start time:</strong> <%= course.start_time %></li>
      <li><strong>End time:</strong> <%= course.end_time %></li>
      <li><strong>Capacity:</strong> <%= course.capacity %></li>
      <li><strong>Price:</strong> <%= course.price %></li>
    </ul>
  </div>
</div>